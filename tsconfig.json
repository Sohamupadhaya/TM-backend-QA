{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16", 
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": ["node_modules"]
}